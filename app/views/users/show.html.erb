<% provide(:title, @user.name) %>
<div class="row">
  <div class="span4">
    <%= render 'shared/forms' %>
  </div>
  <div class="span8">
    <%= render 'follow_form' if signed_in? %>
    <div class="well">
      <% if @robot_configs.any? %>
      <table class="table table-striped">
          <thead>
            <tr>
              <th>#</th>
              <th>Author</th>
              <th>Robot</th>
              <th>Profit Factor</th>
              <th>Drawdown</th>
              <th>Updated</th>
            </tr>
          </thead>
          <% @rank = 0 %>
          <%= will_paginate @robot_configs %>
          <%= render @robot_configs %>
        </table>
      <% end %>
    </div>
    <% if @user.microposts.any? %>
      <div class="well">
        <h5>Microposts (<%= @user.microposts.count %>)</h5>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>        
        </div>
    <% end %>
  </div>
</div>
