<% provide(:title, 'Home') %>
<div class="row-fluid">
  <div class="span8">
    <!-- Highlight -->
    <div class="box">      
      <% if @robot_configs.any? %>
        <div id="myCarousel" class="carousel slide">
          <center>
            <!-- Carousel items -->
            <div class="carousel-inner">
              <div class="active item"><%= render 'shared/robot_config', robot_config: @robot_configs.first %></div>              
              <% if @robot_configs.length > 1 %>
                <div class="item"><%= render 'shared/robot_config', robot_config: @robot_configs.second %></div>              
              <% end %>
              <% if @robot_configs.length > 2 %>
                <div class="item"><%= render 'shared/robot_config', robot_config: @robot_configs.third %></div>              
              <% end %>
            </div>
            <!-- Carousel nav -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo; </a>
          </center>
        </div>
      <% end %>
    </div>
  <div class="well">
    <% if @robot_configs.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>#</th>
            <th>Robot</th>
            <th>Created</th>
            <th class="right">P Factor</th>
            <th class="right">Drawdown</th>            
            <th class="right">Profit</th>            
          </tr>
        </thead>
        <% @show_all_columns = false %>
        <%= will_paginate @robot_configs, class: 'pagination pagination-centered' %>
          <% @rank = 0 %>
          <%= render @robot_configs %>
      </table>
    <% end %>
  </div>
</div>
  <div class="span4">
    <div class="well microposts">
      <!-- Latest Activity -->
      <h5>Latest Activity</h5>
      <% if @microposts.any? %>
        <%= render partial: 'microposts/trimmed_micropost', collection: @microposts, as: :micropost %>
      <% end %>
  </div>
  </div>
</div>
<script type="text/javascript">
  $('#myCarousel').carousel();
</script>