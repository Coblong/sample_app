<%= form_for(@micropost, name: "micropost") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Post a general message on the board..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-small btn-primary" %>
<% end %>